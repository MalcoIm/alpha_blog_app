<h1>Listing all Articles</h1>
<p><%= link_to "Create new article", new_article_path%></p>
<table>

    <tr>
    <th>Title</th>
        <th>Description</th>
    </tr>
    
    <% @all_articles.each do |a| %>
    <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
        <td><%= link_to 'Show', article_path(a) %></td>
    </tr>
    <% end %>
</table>