
    <h1 align="center">Listing all Articles</h1>
    <% @all_articles.each do |a| %>
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="well well-lg">
                    <div class="article-title">
                        
                        <%= link_to a.title, article_path(a) %>
                    </div>
                        <div class="article-body">    
                            <%= truncate(a.description, length: 60) %>
                        
                        </div>    
                            <div class="article-actions">
                                
                                <%= link_to "Edit this Article", edit_article_path(a), class: "btn btn-xs btn-primary" %>
                                <%= link_to "Delete This Articles", article_path(a), method: :delete, 
                                        data: {confirm: "Are you sure that you want to delete this article?"}, 
                                        class: "btn btn-xs btn-danger" %>
                                
                            </div>
                </div>
            </div>
        </div>  

    
<% end %>    
