<h1 class="text-center">All Alpha Bloggers</h1>
<% @users.each do |user| %>
    <ul class="listing text-center listStyle">
        <div class="row">            
            <div class="well col-md-4 col-md-offset-4">
                <li class="img-block"><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="buffer"><%= link_to user.username, user_path(user) %></li>
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>       
            </div>
        </div>
    </ul>
<% end %>